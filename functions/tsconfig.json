{
  "compilerOptions": {
    "lib": [
      "es6"
    ],
    "module": "es6",
    "moduleResolution": "node",
    "target": "es6",
    "outDir": "lib",
    "sourceMap": true,
    "resolveJsonModule": true,               // json imports
    "esModuleInterop": true,                 // import common modules as ES6 Modules
    "allowSyntheticDefaultImports": true,
    "typeRoots": [
      "node_modules/@types"
    ],

  },
  "include": [
    "src"
  ]
}
