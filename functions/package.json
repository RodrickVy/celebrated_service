{
  "name": "functions",
  "scripts": {
    "build:dev": "rimraf ./lib/**/* && tsc --watch",
    "build": "rimraf ./lib/**/* && tsc -p tsconfig-build.json && rollup -c rollup.config.js && rimraf ./tmp",
    "serve:dev": "concurrently \"npm run build:dev\" \"firebase serve --only functions\"",
    "serve": "concurrently \"npm run build\" \"firebase serve --only functions\"",
    "shell": "npm run build:dev && firebase experimental:functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log",
    "lint": "tslint -p tslint.json src/**/*.ts' -e tests/**/*.ts",
    "test": "mocha -r ts-node/register tests/**/*.spec.ts"
  },
  "main": "lib/index.js",
  "dependencies": {
    "firebase-admin": "5.8.0",
    "firebase-functions": "0.8.0",
    "cors": "2.8.4"
  },
  "devDependencies": {
    "tslint": "5.8.0",
    "typescript": "2.6.2",
    "concurrently": "3.5.1",
    "@types/cors": "2.8.3",
    "@types/chai": "4.1.0",
    "@types/mocha": "2.2.46",
    "@types/sinon": "4.1.2",
    "@types/sinon-chai": "2.7.29",
    "chai": "4.1.2",
    "mocha": "4.1.0",
    "ts-node": "4.1.0",
    "sinon": "4.1.3",
    "sinon-chai": "2.14.0",
    "rollup": "0.54.0",
    "rimraf": "2.6.2"
  },
  "private": true
}
