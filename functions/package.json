{
  "name": "functions",
  "scripts": {
    "build:dev": "rimraf ./lib/**/* && tsc --watch",
    "build": "rimraf ./lib/**/* && tsc -p tsconfig-build.json && rollup -c rollup.config.js && rimraf ./tmp",
    "serve:dev": "concurrently \"npm run build:dev\" \"firebase serve --only functions\"",
    "serve": "concurrently \"npm run build\" \"firebase serve --only functions\"",
    "shell": "firebase functions:shell",
    "start": "npm run build && npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log",
    "lint": "tslint -p tsconfig.json src/**/*.ts -e tests/**/*.ts",
    "test": "mocha -r ts-node/register tests/**/*.spec.ts"
  },
  "main": "lib/index.js",
  "dependencies": {
    "firebase-admin": "6.0.0",
    "firebase-functions": "2.0.5",
    "cors": "2.8.4"
  },
  "devDependencies": {
    "tslint": "5.11.0",
    "typescript": "3.0.3",
    "concurrently": "4.0.1",
    "@types/cors": "2.8.4",
    "@types/chai": "4.1.4",
    "@types/mocha": "5.2.5",
    "@types/sinon": "5.0.2",
    "@types/sinon-chai": "3.2.0",
    "chai": "4.1.2",
    "mocha": "5.2.0",
    "ts-node": "7.0.1",
    "sinon": "6.1.5",
    "sinon-chai": "3.2.0",
    "rollup": "0.65.0",
    "rollup-plugin-node-resolve": "3.3.0",
    "rimraf": "2.6.2"
  },
  "private": true
}
